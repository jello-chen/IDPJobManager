<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title-IDP Job Manager</title>
    <link rel="SHORTCUT ICON" href="/Content/Images/favicon.ico" />
    <!-- Bootstrap Core CSS -->
    <link href="/Content/Styles/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="/Content/Styles/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/Content/Styles/master.css" rel="stylesheet">
    <!-- Morris Charts CSS -->
    <link href="/Content/Styles/morris.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="/Content/Styles/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="/Content/Styles/bootstrap-dialog.min.css" rel="stylesheet" type="text/css">
    @RenderSection("Style", required: false)
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
