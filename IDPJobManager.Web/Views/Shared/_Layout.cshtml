<body>
    <div id="wrapper">
        <!-- Navigation -->
        <div id="wrapper">
            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">IDP Job Manager v0.1</a>
                </div>
                <!-- /.navbar-header -->
                <ul class="nav navbar-top-links navbar-right navbar-collapse">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="/Account/LoginOut"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                            </li>
                        </ul>
                        <!-- /.dropdown-user -->
                    </li>
                    <!-- /.dropdown -->
                </ul>
                <!-- /.navbar-top-links -->
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">
                            <li>
                                <a href="/"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                            </li>
                            <li>
                                <a href="/Job"><i class="fa fa-cog fa-spin fa-fw"></i> Jobs</a>
                            </li>
                            <li>
                                <a href="/Api"><i class="fa fa-edit fa-fw"></i> API</a>
                            </li>
                            <li>
                                <a href="/Performance"><i class="fa fa-wrench fa-fw"></i> Performance</a> 
                            </li>
                            <li>
                                <a href="javascript:void(0)"><i class="fa fa-edit fa-fw"></i> Log</a>
                            </li>
                            <li>
                                <a href="javascript:void(0)"><i class="fa fa-sitemap fa-fw"></i> Configuration<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        <a href="#"><i class="fa fa-tasks fa-fw"></i> Job</a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-inbox fa-fw" aria-hidden="true"></i> Log</a>
                                    </li>
                                </ul>
                                <!-- /.nav-second-level -->
                            </li>
                        </ul>
                    </div>
                    <!-- /.sidebar-collapse -->
                </div>
                <!-- /.navbar-static-side -->
            </nav>
            <div id="container" style="padding-top:15px;">
                @RenderBody()
            </div>
            <!-- /#container -->
        </div>
        <!-- /#wrapper -->
        <!-- /#container -->
    </div>
    <!-- /#wrapper -->
    <!-- Morris Charts JavaScript -->
    <script src="/Content/Scripts/raphael.min.js"></script>
    <!-- jQuery -->
    <script src="/Content/Scripts/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/Content/Scripts/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="/Content/Scripts/metisMenu.min.js"></script>
    <script src="/Content/Scripts/morris.min.js"></script>
    @*<script src="/Content/Scripts/morris-data.js"></script>*@
    <script src="/Content/Scripts/bootstrap-dialog.min.js"></script>
    <script src="/Content/Scripts/vue.js"></script>
    <script src="/Content/Scripts/app.js"></script>
